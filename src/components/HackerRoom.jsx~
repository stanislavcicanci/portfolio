import { useGLTF, useTexture } from '@react-three/drei';

export function HackerRoom(props) {
    const { nodes, materials } = useGLTF('/models/hacker-room.glb');

    // Textura pentru conținutul ecranului
    const monitortxtn = useTexture('public/assets/react.svg');
    const screenTxt = useTexture('textures/desk/screen.png'); // Textura pentru carcasa ecranului

    return (
        <group {...props} dispose={null}>
            {/* Carcasa ecranului (textura de fundal a ecranului) */}
            <mesh geometry={nodes.screen_screens_0.geometry} material={materials.screens}>
                <meshMatcapMaterial map={screenTxt} />
            </mesh>

            {/* Sticla de protecție */}
            <mesh geometry={nodes.screen_glass_glass_0.geometry} material={materials.glass} />

            {/* Altele */}
            <mesh geometry={nodes.table_table_mat_0_1.geometry} material={materials.table_mat} />
            <mesh
                castShadow
                receiveShadow
                geometry={nodes.table_table_mat_0_2.geometry}
                material={materials.computer_mat}>
                <meshMatcapMaterial map={screenTxt} />
            </mesh>
            <mesh
                castShadow
                receiveShadow
                geometry={nodes.table_table_mat_0_3.geometry}
                material={materials.server_mat} />
            <mesh geometry={nodes.table_table_mat_0_4.geometry} material={materials.vhsPlayer_mat} />
            <mesh geometry={nodes.table_table_mat_0_5.geometry} material={materials.stand_mat} />
            <mesh geometry={nodes.table_table_mat_0_6.geometry} material={materials.mat_mat} />
            <mesh geometry={nodes.table_table_mat_0_7.geometry} material={materials.arm_mat} />

            {/* Conținutul ecranului (noua imagine pe ecran) */}
            <mesh geometry={nodes.screen_screens_0.geometry} material={materials.screens}>
                <meshBasicMaterial map={monitortxtn} /> {/* Aplică noua imagine aici */}
            </mesh>

            {/* Restul obiectelor */}
            <mesh geometry={nodes.table_table_mat_0_9.geometry} material={materials.cables_mat} />
            <mesh geometry={nodes.table_table_mat_0_10.geometry} material={materials.props_mat} />
            <mesh geometry={nodes.table_table_mat_0_11.geometry} material={materials.ground_mat} />
            <mesh geometry={nodes.table_table_mat_0_12.geometry} material={materials.key_mat} />
        </group>
    );
}

useGLTF.preload('/models/hacker-room.glb');

export default HackerRoom;
